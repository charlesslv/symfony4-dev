{% import '/extra/macro/btn.html.twig' as btn %}
{% extends 'base.html.twig' %}

{% block title %}Albums{% endblock %}

{% block body %}
    <div class="row" style="margin-bottom: 2%;">
        <div class="col-12">
            <section class="jumbotron text-center">
                <div class="container">
                    <h1 class="jumbotron-heading">Albums</h1>
                    <p class="lead text-muted">{{ 'List of all albums.'|trans }}</p>
                    <p>
                        {#<a href="{{ path('album_new') }}" class="btn btn-primary my-2">Create new</a>#}
                        {{ btn.btn_card('ROLE_AUTHOR_ALBUM', path('album_new'), 'primary', 'Create new', 'Create New') }}
                    </p>

                    <label for="categories">Select a category :</label>
                    <select id="categories" name="categories" class="js-categories-filter custom-select">
                        <option value="all" selected>{{ 'All categories'|trans }}</option>
                        {% for category in categories %}
                            <option value="{{ category.name }}">{{ category.name }}</option>
                        {% endfor %}
                    </select>
                </div>
            </section>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="row" id="albums-results">

            </div>
        </div>
    </div>
{% endblock %}
