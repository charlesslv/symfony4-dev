{% import '/extra/macro/btn.html.twig' as btn %}
{% extends 'base.html.twig' %}

{% block title %}Albums{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <section class="jumbotron text-center">
                <div class="container">
                    <h1 class="jumbotron-heading">Albums</h1>
                    <p class="lead text-muted">{{ 'List of all albums.'|trans }}</p>
                    <p>
                        {#<a href="{{ path('album_new') }}" class="btn btn-primary my-2">Create new</a>#}
                        {{ btn.btn_card('ROLE_AUTHOR_ALBUM', path('album_new'), 'primary', 'Create new', 'Create New') }}
                    </p>
                </div>
            </section>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="row">
                {% for album in albums %}
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img class="card-img-top"
                                 data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Thumbnail"
                                 alt="{{ album.name }}">
                            <div class="card-body">
                                <h4 class="card-title">{{ album.name }}</h4>
                                <p class="card-text">{{ album.description }}</p>
                                <p class="card-text">Price : {{ album.price }}â‚¬</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        {{ btn.btn_card(true, path('album_show', {'id': album.id}), 'primary', 'view', 'View') }}
                                        {{ btn.btn_card('ROLE_EDITOR_ALBUM', path('album_edit', {'id': album.id}), 'success', 'edit', 'Edit') }}
                                        {{ btn.btn_card('ROLE_MANAGER_ALBUM', path('album_delete', {'id': album.id}), 'danger', 'delete', 'Delete') }}
                                    </div>
                                    <small class="text-muted">{{ album.category }}</small>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="alert alert-danger" role="alert">
                        {{ 'No records found'|trans }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
