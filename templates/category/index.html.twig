{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12">
            <section class="jumbotron text-center">
                <div class="container">
                    <h1>Category</h1>
                    <p class="lead text-muted">You can manage categories here.</p>
                    <p>
                        <a href="{{ path('category_new') }}" class="btn btn-outline-primary my-2">Create new</a>
                    </p>
                </div>
            </section>
        </div>
    </div>
    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>
                    <a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-sm btn-outline-info">show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-sm btn-outline-success">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}" class="btn btn-sm btn-outline-primary">Create new</a>
{% endblock %}
